    { name = "Possessed Slime", zone = "Zone12.1", enemy = "Possessed Slime", needsRequest = true },
}

local enemyEnabled = {}
for i, _ in ipairs(enemyList) do enemyEnabled[i] = false end

local foodZones = {
    { name = "Crystal Food", zone = "Zone12.1", enabled = false },
    { name = "Draco Food", zone = "Zone12", enabled = false },
}

local config = {
    farmBosses = false,
    farmEnemies = false,
    farmFood = false,
    autoPlant = false,
    autoHatch = false,
    autoNests = false,
    sacrificeQueen = false,
    sacrificeKing = false,
    sacrificeFrozen = false,
    sacrificeWalrus = false,
    sacrificeFennec = false,
    sacrificeMystic = false,
    sacrificeOrb = false,
    doubleJump = false,
    wallspeed = 16,
    plantSpeed = 0.001,
    hatchSpeed = 0.001,
    nestsSpeed = 0.001,
    bossThreads = 1,
    enemyThreads = 1,
    foodThreads = 1,
}

